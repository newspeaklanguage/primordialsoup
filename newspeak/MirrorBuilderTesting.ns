	assert: instance counter equals: 11.
	assert: instance x equals: 1.
	assert: instance counter equals: 11.
	assert: instance y equals: 11.
	assert: instance counter equals: 11.
	assert: instance z equals: 211.
	assert: instance counter equals: 211.
	instance:: klass new.
	assert: instance counter equals: 0.
